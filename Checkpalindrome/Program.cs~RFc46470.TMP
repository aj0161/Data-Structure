        static void Main(string[] args)
        {
            bool res = Program.palindrome_iterative("Sore was I ere I saw Eros");
            bool res1 = Program.palindrome_recrusive("Sore was I ere I saw Eros");
           // Console.WriteLine(  res1);

            object ass = "ass";
